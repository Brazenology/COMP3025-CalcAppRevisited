<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kallio.brendan.calculatorapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    android:backgroundTint="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="60dp"
        android:textAlignment="textEnd"
        android:background="#848484"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="A/C"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#c9c9c9" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="+/-"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#c9c9c9" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="%"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button2"
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#c9c9c9" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="รท "
        android:id="@+id/button4"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button3"
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="#ff8848" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="7"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="8"
        android:id="@+id/button6"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="9"
        android:id="@+id/button7"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button6"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="X"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#ff8848" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="4"
        android:id="@+id/button9"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="5"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button9"
        android:layout_alignStart="@+id/button6"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="6"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button10"
        android:layout_alignStart="@+id/button7"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="-"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/button11"
        android:layout_alignStart="@+id/button8"
        android:textAlignment="center"
        android:textSize="50dp"
        android:background="#ff8848" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="1"
        android:id="@+id/button13"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="2"
        android:id="@+id/button14"
        android:layout_below="@+id/button9"
        android:layout_toEndOf="@+id/button13"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="3"
        android:id="@+id/button15"
        android:layout_below="@+id/button10"
        android:layout_toEndOf="@+id/button14"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="+"
        android:id="@+id/button16"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button15"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#ff8848" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="0"
        android:id="@+id/button17"
        android:layout_below="@+id/button13"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button14"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="."
        android:id="@+id/button19"
        android:layout_below="@+id/button14"
        android:layout_toEndOf="@+id/button14"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#d3d3d3" />

    <Button
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:text="="
        android:id="@+id/button20"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#ff8848"
        android:layout_below="@+id/button15"
        android:layout_toEndOf="@+id/button15" />
</RelativeLayout>
